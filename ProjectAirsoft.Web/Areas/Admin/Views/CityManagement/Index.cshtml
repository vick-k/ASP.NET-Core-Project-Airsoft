@using ProjectAirsoft.ViewModels.AdminArea;
@model IEnumerable<CityViewModel>

@{
	ViewData["Title"] = "City Management";
}

<div class="container mt-5">
	<h1 class="text-center mb-4">@ViewData["Title"]</h1>

	<a class="btn btn-success btn-sm mb-2" asp-controller="CityManagement" asp-action="Create">Add City</a>

	<table class="table table-bordered table-hover">
		<caption>Total cities: @Model.Count()</caption>
		<thead>
			<tr>
				<th>City</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var city in Model)
			{
				<tr>
					<td>@city.Name</td>
					<td>
						<a asp-area="Admin" asp-action="Edit" asp-controller="CityManagement" asp-route-id="@city.Id" class="btn btn-info btn-sm">Edit</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
