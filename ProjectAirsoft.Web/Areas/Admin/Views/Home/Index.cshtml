@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4 mb-4 text-success">@ViewData["Title"]</h1>
        <p class="lead mb-5 text-muted">Manage your application using the sections below:</p>
    </div>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card shadow h-100">
                <div class="card-body d-flex flex-column align-items-center text-center">
                    <h5 class="card-title">Manage Users</h5>
                    <p class="card-text text-muted">Assign roles and delete users.</p>
                    <a asp-area="Admin" asp-controller="UserManagement" asp-action="Index" class="btn btn-primary mt-auto w-100">
                        Go to Users
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow h-100">
                <div class="card-body d-flex flex-column align-items-center text-center">
                    <h5 class="card-title">Manage Games</h5>
                    <p class="card-text text-muted">View and delete games.</p>
                    <a asp-area="Admin" asp-controller="GameManagement" asp-action="Index" class="btn btn-primary mt-auto w-100">
                        Go to Games
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow h-100">
                <div class="card-body d-flex flex-column align-items-center text-center">
                    <h5 class="card-title">Manage Terrains</h5>
                    <p class="card-text text-muted">Add, edit, change status and delete terrains.</p>
                    <a asp-area="Admin" asp-controller="TerrainManagement" asp-action="Index" class="btn btn-primary mt-auto w-100">
                        Go to Terrains
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow h-100">
                <div class="card-body d-flex flex-column align-items-center text-center">
                    <h5 class="card-title">Manage Teams</h5>
                    <p class="card-text text-muted">View and delete teams.</p>
                    <a asp-area="Admin" asp-controller="TeamManagement" asp-action="Index" class="btn btn-primary mt-auto w-100">
                        Go to Teams
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow h-100">
                <div class="card-body d-flex flex-column align-items-center text-center">
                    <h5 class="card-title">Manage Cities</h5>
                    <p class="card-text text-muted">Add and edit cities.</p>
                    <a asp-area="Admin" asp-controller="CityManagement" asp-action="Index" class="btn btn-primary mt-auto w-100">
                        Go to Cities
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
