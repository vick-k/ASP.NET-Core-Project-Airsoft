@using static ProjectAirsoft.Common.ApplicationConstants;

@if (TempData[AlertDanger] != null)
{
	<div class="alert alert-danger alert-dismissible fade show" role="alert">
		<i class="bi-exclamation-circle me-2"></i>@TempData[AlertDanger]
		<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
	</div>
}

@if (TempData[AlertSuccess] != null)
{
	<div class="alert alert-success alert-dismissible fade show" role="alert">
		<i class="bi-info-circle me-2"></i>@TempData[AlertSuccess]
		<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
	</div>
}