@using ProjectAirsoft.ViewModels.Comment;
@model IEnumerable<CommentViewModel>

<h3 class="mt-4">Comments</h3>

<hr />

@if (Model.Count() == 0)
{
	<p class="text-secondary">There are no comments yet.</p>
}
else
{
	@foreach (var comment in Model)
	{
		<p class="mb-0">
			<strong>@comment.Author</strong> <span class="text-secondary">@comment.CreatedOn</span>
			@if (User?.Identity?.Name == comment.Author)
			{
				<a asp-controller="Comment" asp-action="Delete" asp-route-id="@comment.Id" class="badge rounded text-bg-danger text-decoration-none">Delete</a>
			}
		</p>
		<p>@comment.Content</p>
		<hr />
	}
}
