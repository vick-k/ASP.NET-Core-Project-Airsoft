@using ProjectAirsoft.ViewModels.Comment;
@model IEnumerable<CommentViewModel>

<h3 class="mt-4">Comments</h3>

<hr />

@if (Model.Count() == 0)
{
	<p class="text-secondary">There are no comments yet.</p>
}
else
{
	@foreach (var comment in Model)
	{
		<p><strong>@comment.Author</strong> <span class="text-secondary">@comment.CreatedOn</span></p>
		<p>@comment.Content</p>
		<hr />
	}
}
