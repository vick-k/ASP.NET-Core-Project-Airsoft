@using ProjectAirsoft.ViewModels.Team;
@model TeamDeleteViewModel

@{
	ViewData["Title"] = "Delete Team";
}

<h2>@ViewData["Title"]</h2>

<hr />

<img src="@Model.LogoUrl" height="400" />
<h4>@Model.Name</h4>
<p>@Model.City</p>
<p>Leader: @Model.Leader</p>

<p class="text-danger mt-3">Are you sure you want to delete this team?</p>

<form asp-action="Delete" method="post">
	<input type="hidden" asp-for="Id" />
	<button type="submit" class="btn btn-outline-danger"><i class="bi-check2-square me-2"></i>Confirm Delete</button>
	<a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary"><i class="bi-arrow-left-circle me-2"></i>Cancel</a>
</form>