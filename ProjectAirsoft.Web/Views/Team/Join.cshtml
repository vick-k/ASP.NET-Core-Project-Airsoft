@using ProjectAirsoft.ViewModels.Team;
@model TeamJoinViewModel

@{
	string teamName = Model.Name;
	ViewData["Title"] = $"Join {teamName}";
}

<h2>@ViewData["Title"]</h2>

<hr />

<img src="@Model.LogoUrl" height="400" />
<h4>@Model.Name</h4>
<p>@Model.City</p>

<p class="text-success mt-3">Are you sure you want to join this team?</p>

<form asp-action="Join" method="post">
	<button type="submit" class="btn btn-outline-success">Confirm Join</button>
	<a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
</form>