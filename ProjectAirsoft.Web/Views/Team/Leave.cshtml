@using ProjectAirsoft.ViewModels.Team;
@model TeamLeaveViewModel

@{
	string teamName = Model.Name;
	ViewData["Title"] = $"Leave {teamName}";
}

<h2>@ViewData["Title"]</h2>

<hr />

<img src="@Model.LogoUrl" height="400" />
<h4>@Model.Name</h4>
<p>@Model.City</p>

<p class="text-danger mt-3">Are you sure you want to leave this team?</p>

<form asp-action="Leave" method="post">
	<button type="submit" class="btn btn-outline-danger">Confirm Leave</button>
	<a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
</form>